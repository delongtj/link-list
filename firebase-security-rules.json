{
  "rules": {
    "lists": {
      "$listId": {
        ".read": true,
        ".write": "newData.exists() && (!newData.hasChild('title') || (newData.child('title').isString() && newData.child('title').val().length <= 100)) && (!data.exists() || (now - data.child('lastModified').val()) > 1000) && (!newData.hasChild('lastModified') || (now - newData.child('lastModified').val()) < 60000)"
      }
    }
  }
}